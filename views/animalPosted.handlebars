<!-- Frontend uses bootstrap features and methods for UI adapted from https://getbootstrap.com/docs/5.0/ -->
<div class="container-sm">
    <table class="table table-borderless caption-top">
        <caption>{{Name}}'s adoption profile was created!</caption>
        <thead>
            <tr>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">View the Pet Profile</th>
                <td><a href="/petProfile?petId={{id}}">{{id}}</a></td>
            </tr>
            <tr>
                <th scope="row">Type</th>
                <td>{{Type}}</td>
            </tr>
            <tr>
                <th scope="row">Species</th>
                <td>{{Species}}</td>
            </tr>
            <tr>
                <th scope="row">Breed</th>
                <td>{{Breed}}</td>
            </tr>
            <tr>
                <th scope="row">Good with Other Animals</th>
                <td>{{Disp_Other_Animals}}</td>
            </tr>
            <tr>
                <th scope="row">Good with Children</th>
                <td>{{Disp_Kids}}</td>
            </tr>
            <tr>
                <th scope="row">Leash Required</th>
                <td>{{Disp_Leash}}</td>
            </tr>
            <tr>
                <th scope="row">Picture 1</th>
                {{#if Picture1_URL_Primary}}
                    <td>{{Picture1_URL_Primary}}</td>
                {{else}}
                    <td>No picture available</td>
                {{/if}}
            </tr>
            <tr>
                <th scope="row">Picture 2</th>
                {{#if Picture2_URL}}
                    <td>{{Picture2_URL}}</td>
                {{else}}
                    <td>No picture available</td>
                {{/if}}
            </tr>
            <tr>
                <th scope="row">Picture 3</th>
                {{#if Picture3_URL}}
                    <td>{{Picture3_URL}}</td>
                {{else}}
                    <td>No picture available</td>
                {{/if}}
            </tr>
            <tr>
                <th scope="row">Gender</th>
                <td>{{Gender}}</td>
            </tr>
            <tr>
                <th scope="row">Altered</th>
                <td>{{Altered}}</td>
            </tr>
            <tr>
                <th scope="row">Size</th>
                <td>{{Size}}</td>
            </tr>
            <tr>
                <th scope="row">Location</th>
                <td>{{Location_City}}, {{Location_State}}</td>
            </tr>
            <tr>
                <th scope="row">Age Range</th>
                <td>{{Age_Range}}</td>
            </tr>
            <tr>
                <th scope="row">Availability</th>
                <td>{{Availability}}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{Description}}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-secondary" onclick="location.href='/add';">Create Another Profile</button>
    <button class="btn btn-primary" onclick="location.href='/';">Home</button>
</div>
